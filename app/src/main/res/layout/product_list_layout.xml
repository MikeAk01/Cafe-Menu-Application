<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="40dp"
    app:cardElevation="50dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/admin_list_image"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="10dp"
            app:shapeAppearanceOverlay="@style/roundedImageView"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:id="@+id/admin_list_name"
            android:text="Name"
            android:textSize="20sp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/admin_list_image"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:id="@+id/admin_list_price"
            android:text="Price"
            android:textSize="20sp"
            android:layout_toEndOf="@id/admin_list_name"
            android:layout_marginTop="25dp"
            android:layout_marginStart="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/admin_list_availability"
            android:textSize="20sp"
            android:layout_toEndOf="@id/admin_list_price"
            android:layout_marginTop="25dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>