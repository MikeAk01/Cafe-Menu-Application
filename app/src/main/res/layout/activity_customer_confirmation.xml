<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cafe_menu_wallpaper"
    tools:context=".Customer.CustomerConfirmation">

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:fontFamily="@font/almendra"
      android:text="UPDATES"
      android:textAlignment="center"
      android:textColor="@color/white"
      android:textSize="50dp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toTopOf="@id/customer_updateRecyclerView1"/>

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/customer_updateRecyclerView1"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scrollbars="vertical"
      android:layout_marginTop="70dp"
      tools:listitem="@layout/update_list_layout" />

  <!-- Floating back button -->
  <com.google.android.material.floatingactionbutton.FloatingActionButton
      android:id="@+id/floatingBackButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      android:src="@drawable/baseline_arrow_back_24"
      app:backgroundTint="#9C9B9B"
      app:elevation="6dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:contentDescription="TODO" />

  </androidx.constraintlayout.widget.ConstraintLayout>