<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Customer.CustomerRegister">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cafe_menu_wallpaper"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".Admin.AdminRegister">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp">

            <LinearLayout
                android:layout_width="330dp"
                android:layout_height="554dp"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/almendra"
                    android:text="Register"
                    android:textAlignment="center"
                    android:textColor="#583A00"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/Customer_register_FName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/baseline_person_24"
                    android:hint="First Name"
                    android:padding="5dp" />

                <EditText
                    android:id="@+id/Customer_register_LName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/baseline_person_24"
                    android:hint="Last Name"
                    android:padding="5dp" />

                <EditText
                    android:id="@+id/Customer_register_Email"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/baseline_email_24"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:padding="5dp" />

                <EditText
                    android:id="@+id/Customer_register_PhoneN"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/baseline_phone_24"
                    android:hint="Phone Number"
                    android:inputType="number"
                    android:padding="5dp" />

                <EditText
                    android:id="@+id/Customer_register_UserName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/baseline_person_pin_24"
                    android:hint="User Name"
                    android:padding="5dp" />

                <EditText
                    android:id="@+id/Customer_register_Password"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/baseline_lock_24"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="5dp" />

                <CheckBox
                    android:id="@+id/Customer_register_IsActive"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:text="Active" />

                <Button
                    android:id="@+id/Customer_register_Button"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#583A00"
                    android:text="SIGN UP"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/Customer_Redirect_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Already a user? Click here to login"
                    android:textColor="#583A00" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

