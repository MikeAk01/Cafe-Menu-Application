<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/cafe_menu_wallpaper"
    tools:context=".Admin.AdminRegister">
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textSize="30dp"
                android:textAlignment="center"
                android:fontFamily="@font/almendra"
                android:textStyle="bold"
                android:textColor="#583A00"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/Admin_register_FName"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:hint="First Name"
                android:drawableLeft="@drawable/baseline_person_24"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/Admin_register_LName"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:hint="Last Name"
                android:drawableLeft="@drawable/baseline_person_24"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/Admin_register_Email"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:hint="Email"
                android:drawableLeft="@drawable/baseline_email_24"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/Admin_register_PhoneN"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:hint="Phone Number"
                android:drawableLeft="@drawable/baseline_phone_24"
                android:inputType="number"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/Admin_register_UserName"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:hint="User Name"
                android:drawableLeft="@drawable/baseline_person_pin_24"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/Admin_register_Password"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:hint="Password"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:inputType="textPassword"/>

            <CheckBox
                android:id="@+id/Admin_register_IsActive"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="Active"/>
            
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/Admin_register_Button"
                android:text="SIGN UP"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#583A00"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Admin_redirect_login"
                android:layout_marginTop="10dp"
                android:text="Already a user? Click here to login"
                android:textColor="#583A00"
                android:gravity="center"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>